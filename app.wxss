/**
 * 全局样式表 - VOUN风格
 */

/* 页面通用样式 */
page {
  font-family: 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #222;
  background-color: #fafafa;
  box-sizing: border-box;
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 30rpx;
  padding: 30rpx;
  overflow: hidden;
}

/* 按钮样式 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary {
  background-color: #000;
  color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #000;
}

.btn-block {
  width: 100%;
  margin: 20rpx 0;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 30rpx 0;
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-primary {
  color: #000;
}

.text-secondary {
  color: #888;
}

.text-small {
  font-size: 24rpx;
}

/* 图片样式 */
.img-responsive {
  width: 100%;
  height: auto;
  display: block;
}

.img-circle {
  border-radius: 50%;
}

/* 弹性布局 */
.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

/* 边距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

/* 安全区适配 */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
