<!-- components/custom-nav/custom-nav.wxml -->
<view class="custom-nav" style="background-color: {{backgroundColor}};">
  <!-- 状态栏占位 -->
  <view class="status-bar" style="height: {{statusBarHeight}}px;"></view>
  
  <!-- 导航栏内容 -->
  <view class="nav-content">
    <!-- 返回按钮 -->
    <view class="nav-back" bindtap="navBack" wx:if="{{showBack}}">
      <view class="back-icon" style="border-color: {{textColor}};"></view>
    </view>
    
    <!-- 标题 -->
    <view class="nav-title" style="color: {{textColor}};">
      <text>啦啦漫</text>
    </view>
    
    <!-- 占位，保持标题居中 -->
    <view class="nav-placeholder" wx:if="{{showBack}}"></view>
  </view>
</view>
