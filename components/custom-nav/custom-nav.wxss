/* components/custom-nav/custom-nav.wxss */
.custom-nav {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.status-bar {
  width: 100%;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  padding: 0 16px;
  box-sizing: border-box;
}

.nav-back {
  width: 30px;
  height: 44px;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 12px;
  height: 12px;
  border-left: 2px solid;
  border-bottom: 2px solid;
  transform: rotate(45deg);
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav-placeholder {
  width: 30px;
  height: 44px;
}
