/* 参数调整区域 */
.params-section {
  margin-top: 30rpx;
}

.param-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.param-label {
  width: 80rpx;
  font-size: 24rpx;
}

.param-slider {
  flex: 1;
  margin: 0 20rpx;
}

.param-value {
  width: 60rpx;
  font-size: 24rpx;
  text-align: right;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}

.preview-btn, .generate-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background-color: #222222;
  color: #ffffff;
  border: none;
}

.generate-btn {
  background-color: #007AFF;
}

/* 结果区域 */
.result-section {
  margin: 40rpx 0;
}

.result-gif {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  background-color: #111111;
  margin-bottom: 30rpx;
}

.result-actions {
  display: flex;
  justify-content: space-between;
}

.result-actions .action-btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 24rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35rpx;
}

.save-btn {
  background-color: #222222;
  color: #ffffff;
}

.share-btn {
  background-color: #222222;
  color: #ffffff;
}

.buy-btn {
  background-color: #007AFF;
  color: #ffffff;
}

/* 底部提示 */
.footer-tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 10rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #999999;
  text-align: center;
  display: block;
}
