/* gifmaker.wxss - GIF动画制作页面样式 */

/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #000000;
  padding: 30rpx;
  box-sizing: border-box;
  color: #ffffff;
}

/* 页面标题 */
.page-header {
  margin-bottom: 40rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.page-subtitle {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

/* 上传区域 */
.upload-section {
  margin: 40rpx 0;
}

.upload-box {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #444444;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #111111;
}

.upload-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  background-image: url('data:image/svg+xml;base64,');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.upload-text {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 22rpx;
  color: #666666;
}

/* 编辑区域 */
.edit-section {
  margin-bottom: 40rpx;
}

.image-preview {
  margin-bottom: 30rpx;
  position: relative;
}

.source-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  background-color: #111111;
}

.image-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.action-btn {
  font-size: 24rpx;
  color: #007AFF;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(0, 122, 255, 0.1);
}

/* 效果选择区域 */
.effect-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}

.effect-tabs {
  display: flex;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #222222;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #999999;
  position: relative;
}

.tab.active {
  color: #ffffff;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #007AFF;
  border-radius: 4rpx;
}

.effect-list {
  display: flex;
  white-space: nowrap;
  margin: 20rpx 0 30rpx;
}

.effect-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  padding: 20rpx;
  width: 120rpx;
  border-radius: 20rpx;
  background-color: #111111;
}

.effect-item.active {
  background-color: #222222;
  box-shadow: 0 0 10rpx rgba(0, 122, 255, 0.5);
}

.effect-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

