/* index.wxss - LaLaMan首页样式 (VOUN风格) */

/* 整体页面容器 - 恢复原始风格 */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: visible; /* 允许滚动 */
  background-color: #000000; /* 恢复黑色背景 */
  padding: 0;
  margin: 0;
}

/* 完全独立悬浮的标题 */
.fixed-header {
  position: fixed;
  top: 60rpx;
  left: 0;
  right: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  pointer-events: none;
  background-color: transparent;
}

/* 标题文字样式 */
.app-title {
  font-size: 54rpx;
  font-weight: 600;
  color: #000000;
  letter-spacing: 2rpx;
  transform: scale(1);
  transform-origin: center center;
  transition: transform 0.25s cubic-bezier(0.23, 1, 0.32, 1);
  pointer-events: none;
  text-shadow: 0 2px 8px rgba(255, 255, 255, 0.7);
}

/* 内容容器样式 - 恢复黑色背景 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #000000; /* 恢复黑色背景 */
  position: relative;
  overflow: visible;
  padding: 0;
  margin: 0;
  width: 100%;
  padding-top: 0;
}

/* 标题区域样式 */
.title-container {
  display: none;
}

.main-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #1E429C;
  margin-bottom: 10rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
}

/* 单行大图布局 - 恢复黑色背景 */
.gallery-scroll {
  width: 100%;
  height: 100vh; /* 填充整个屏幕高度 */
  background-color: #000000; /* 恢复黑色背景 */
  padding: 0; /* 移除所有内边距 */
  box-sizing: border-box;
  position: relative;
}

.gallery-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
}

/* 单张大图布局 - 恢复高对比度 */
.gallery-item {
  width: 90%;
  height: auto;
  margin: 30rpx auto;
  position: relative;
  transition: all 0.3s ease;
  transform: scale(0.98);
  opacity: 0.95;
}

/* 当前激活项效果 - 增强版 */
.gallery-item.active {
  width: 95%;
  margin: 20rpx auto;
  transform: scale(1.02);
  opacity: 1;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.25);
}

/* 激活项的风格标签显示 */
.gallery-item.active .style-info {
  opacity: 1;
}

/* 激活项的卡片阴影效果 */
.gallery-item.active .style-card {
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.3);
}

/* VOUN风格卡片容器 */
.style-card {
  width: 100%;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
}

/* 大图样式 - 增强版 */
.gallery-image {
  width: 100%;
  display: block;
  border-radius: 6rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

/* 样式名称标签 - 中央底部设计 */
.style-info {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 12rpx 24rpx;
  background-color: rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
  border-radius: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  opacity: 0; /* 默认隐藏 */
  transition: opacity 0.3s ease;
}

.style-name {
  color: #ffffff;
  font-size: 20rpx; /* 缩小20% */
  font-weight: 400;
  letter-spacing: 1.5rpx;
  text-align: center;
}

/* 移除底部留白 */
.gallery-footer {
  display: none;
  height: 0;
  width: 0;
}

/* 已移除导航容器，按钮独立悬浮 */

/* VOUN风格完全独立悬浮按钮 */
.float-button {
  position: fixed;
  border-radius: 50%;
  background-color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  overflow: visible;
}

/* 左侧动效按钮（乘号×） */
.effect-btn {
  left: 40px;
  bottom: 25px;
  width: 50px;
  height: 50px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 中间风格按钮（加号+） - 明显大于两侧按钮 */
.style-btn {
  left: 50%;
  transform: translateX(-50%);
  bottom: 20px;
  width: 65px;
  height: 65px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 右侧打印按钮（等号=） */
.print-btn {
  right: 40px;
  bottom: 25px;
  width: 50px;
  height: 50px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 按钮图标样式 - 完全居中 */
.button-icon {
  width: 21px;  /* 缩小12% (24px * 0.88 = 21.12px) */
  height: 21px;
}

/* 中间按钮图标尺寸更大 */
.style-btn .button-icon {
  width: 32px;
  height: 32px;
}
