/* pages/print_order/print_order.wxss */

/* 整体容器样式 - VOUN黑色风格 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #000000;
  color: #ffffff;
  padding: 0 0 120rpx 0;
  box-sizing: border-box;
}

/* 通用标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 40rpx 20rpx;
  color: #ffffff;
  letter-spacing: 2rpx;
}

/* 订单信息卡片 */
.order-card {
  margin: 0 40rpx;
  padding: 30rpx;
  background-color: #111111;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.item-label {
  font-size: 26rpx;
  color: #aaaaaa;
}

.item-value {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 图片预览区域 */
.images-preview {
  margin: 40rpx 0;
}

.images-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.preview-image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background-color: #111111;
}

/* 地址选择区域 */
.address-card {
  margin: 0 40rpx;
  padding: 30rpx;
  background-color: #111111;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-info {
  flex: 1;
}

.address-name-phone {
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 26rpx;
  color: #aaaaaa;
}

.address-detail {
  font-size: 26rpx;
  color: #aaaaaa;
  line-height: 1.4;
}

.address-arrow {
  font-size: 32rpx;
  color: #666666;
  margin-left: 20rpx;
}

.address-placeholder {
  flex: 1;
}

.address-placeholder-text {
  font-size: 28rpx;
  color: #666666;
}

/* 备注信息区域 */
.remark-input-container {
  margin: 0 40rpx;
  padding: 20rpx;
  background-color: #111111;
  border-radius: 12rpx;
  position: relative;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  font-size: 26rpx;
  color: #ffffff;
  line-height: 1.4;
  padding: 0;
}

.remark-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #666666;
}

/* 价格计算区域 */
.price-calculation {
  margin: 40rpx 40rpx;
  padding: 30rpx;
  background-color: #111111;
  border-radius: 12rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 26rpx;
  color: #aaaaaa;
}

.price-value {
  font-size: 26rpx;
  color: #ffffff;
}

.price-row.total .price-label,
.price-row.total .price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.price-divider {
  height: 1px;
  background-color: #333333;
  margin: 20rpx 0;
}

/* 底部支付栏 */
.payment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  background-color: #111111;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
  z-index: 100;
}

.total-amount {
  display: flex;
  align-items: center;
}

.amount-label {
  font-size: 28rpx;
  color: #aaaaaa;
}

.amount-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.payment-button {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffffff;
  color: #000000;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
  text-align: center;
  letter-spacing: 2rpx;
}

.payment-button.disabled {
  background-color: #333333;
  color: #666666;
}
