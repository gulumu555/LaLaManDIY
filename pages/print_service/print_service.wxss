/* pages/print_service/print_service.wxss */

/* 整体容器样式 - VOUN黑色风格 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #000000;
  color: #ffffff;
  padding: 0 0 120rpx 0;
  box-sizing: border-box;
}

/* 顶部Banner样式 */
.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.banner-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

/* 服务简介区域 */
.intro-section {
  padding: 0 40rpx;
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 40rpx;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.intro-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #cccccc;
  text-align: justify;
}

/* 画幅规格选择区域 */
.size-selection {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 规格卡片样式 */
.size-card {
  background-color: #111111;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 选中的规格卡片样式 */
.size-card.selected {
  background-color: #222222;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.4);
  transform: scale(1.02);
  border: 1px solid #444444;
}

/* 规格图片容器 */
.size-image-container {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #0a0a0a;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 规格图片样式 */
.size-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 规格信息样式 */
.size-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.size-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.size-dimensions {
  font-size: 26rpx;
  color: #aaaaaa;
}

.size-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
  margin: 10rpx 0;
}

.size-description {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

/* 选择按钮样式 */
.select-button {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 0;
  background-color: rgba(255, 255, 255, 0.1);
  text-align: center;
  font-size: 26rpx;
  color: #ffffff;
  letter-spacing: 2rpx;
}

/* 底部按钮区域 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  background-color: #000000;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
  z-index: 100;
}

.back-button, .continue-button {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.back-button {
  background-color: #333333;
  color: #ffffff;
}

.continue-button {
  background-color: #ffffff;
  color: #000000;
  font-weight: bold;
}
