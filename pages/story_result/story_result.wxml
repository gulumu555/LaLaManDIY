<!-- story_result.wxml - 结果展示页 -->
<view class="container">
  <!-- 一格故事图卡片 -->
  <view class="story-card" id="storyCard">
    <!-- 主画面 -->
    <view class="main-image-wrapper">
      <image 
        class="main-image" 
        src="{{imageUrl}}" 
        mode="aspectFill"
        bindload="onImageLoad"
      ></image>
    </view>
    
    <!-- 底部信息栏 -->
    <view class="info-bar">
      <!-- 地点 -->
      <view class="location-row">
        <text class="location-icon">📍</text>
        <text class="location-text">{{location}}</text>
      </view>
      
      <!-- 时间 -->
      <view class="time-row">
        <text class="time-icon">⏰</text>
        <text class="time-text">{{timeDisplay}}</text>
      </view>
      
      <!-- 一句话故事 -->
      <view class="caption-row">
        <view class="caption-text">{{caption}}</view>
        <view class="refresh-btn" bindtap="refreshCaption">
          <text class="refresh-icon">🎲</text>
        </view>
      </view>
    </view>
    
    <!-- 水印 -->
    <view class="watermark">
      <text>由 LaLaMan 生成 · 我也来一组</text>
    </view>
  </view>
  
  <!-- 操作按钮 -->
  <view class="action-buttons">
    <view class="action-btn save" bindtap="saveToAlbum">
      <text class="action-icon">📷</text>
      <text class="action-text">保存到相册</text>
    </view>
    <view class="action-btn share" bindtap="shareImage">
      <text class="action-icon">📤</text>
      <text class="action-text">分享</text>
    </view>
  </view>
  
  <!-- 更多操作 -->
  <view class="more-actions">
    <view class="more-btn" bindtap="createAnother">
      <text>再来一张</text>
    </view>
    <view class="more-btn" bindtap="goHome">
      <text>返回首页</text>
    </view>
  </view>
</view>

<!-- 刷新文案加载中 -->
<view class="caption-loading" wx:if="{{isRefreshingCaption}}">
  <view class="caption-loading-spinner"></view>
</view>

<!-- 分享弹窗 -->
<view class="share-modal" wx:if="{{showShareModal}}">
  <view class="share-mask" bindtap="hideShareModal"></view>
  <view class="share-content">
    <view class="share-title">分享到</view>
    <view class="share-options">
      <button class="share-option" open-type="share">
        <text class="share-option-icon">💬</text>
        <text class="share-option-text">微信好友</text>
      </button>
      <view class="share-option" bindtap="shareToMoments">
        <text class="share-option-icon">🌐</text>
        <text class="share-option-text">朋友圈</text>
      </view>
      <view class="share-option" bindtap="copyLink">
        <text class="share-option-icon">🔗</text>
        <text class="share-option-text">复制链接</text>
      </view>
    </view>
    <view class="share-cancel" bindtap="hideShareModal">取消</view>
  </view>
</view>
