/* story_result.wxss - 结果展示页样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 故事卡片 */
.story-card {
  width: 100%;
  max-width: 680rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.3);
  position: relative;
}

.main-image-wrapper {
  width: 100%;
  aspect-ratio: 1 / 1;
  overflow: hidden;
}

.main-image {
  width: 100%;
  height: 100%;
}

/* 信息栏 */
.info-bar {
  padding: 32rpx;
  background: #fff;
}

.location-row,
.time-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-icon,
.time-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.time-text {
  font-size: 24rpx;
  color: #999;
}

.caption-row {
  display: flex;
  align-items: flex-start;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.caption-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  font-weight: 500;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.refresh-icon {
  font-size: 32rpx;
}

/* 水印 */
.watermark {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 18rpx;
  color: rgba(0,0,0,0.3);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
  width: 100%;
  max-width: 680rpx;
}

.action-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.action-btn.save {
  background: linear-gradient(135deg, #4ecca3 0%, #38d9a9 100%);
  box-shadow: 0 8rpx 30rpx rgba(78, 204, 163, 0.4);
}

.action-btn.share {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
}

.action-icon {
  font-size: 36rpx;
}

.action-text {
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
}

/* 更多操作 */
.more-actions {
  display: flex;
  gap: 32rpx;
  margin-top: 48rpx;
}

.more-btn {
  padding: 16rpx 32rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 30rpx;
}

.more-btn text {
  font-size: 28rpx;
  color: rgba(255,255,255,0.7);
}

/* 刷新文案加载 */
.caption-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.caption-loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-top-color: #4ecca3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.share-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.share-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.share-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.share-options {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-bottom: 40rpx;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.share-option::after {
  display: none;
}

.share-option-icon {
  font-size: 48rpx;
}

.share-option-text {
  font-size: 24rpx;
  color: #666;
}

.share-cancel {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  border-top: 1rpx solid #eee;
}
