/* style_select.wxss - 风格选择页面样式 (VOUN风格) */

page {
  background-color: #000000;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/* 整体页面容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #000000;
  color: #ffffff;
  padding: 0;
  margin: 0;
  position: relative;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #000000;
  border-bottom: 1rpx solid #333333;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

/* 返回箭头样式 */
.back-arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #ffffff;
  border-left: 3rpx solid #ffffff;
  transform: rotate(-45deg);
}

.nav-center {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.voun-logo {
  width: 60rpx;
  height: 60rpx;
}

.nav-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.save-text {
  font-size: 32rpx;
  color: #4cd964;
  font-weight: 500;
}

/* 效果图预览区 */
.preview-area {
  width: 100%;
  height: 50vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.preview-image {
  max-width: 100%;
  max-height: 100%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 风格类别选择区 */
.category-selector {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  width: 100%;
  background-color: #000000;
  border-bottom: 1rpx solid #333333;
}

.category-item {
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  color: #999999;
  position: relative;
}

.category-item.active {
  color: #ffffff;
  font-weight: 500;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #4cd964;
  border-radius: 2rpx;
}

/* 具体风格选择区 */
.style-list {
  white-space: nowrap;
  padding: 30rpx 20rpx;
  background-color: #000000;
}

.style-item {
  display: inline-block;
  width: 160rpx;
  margin-right: 30rpx;
  text-align: center;
  vertical-align: top;
}

.style-icon-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #333333;
  margin-bottom: 10rpx;
}

.style-icon {
  width: 100%;
  height: 100%;
}

.style-name {
  font-size: 24rpx;
  color: #ffffff;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
