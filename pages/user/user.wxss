  color: white;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.promo-section {
  padding: 0 20rpx 30rpx;
}

.promo-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.promo-card {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.promo-image {
  width: 100%;
  height: 200rpx;
}

.promo-info {
  padding: 20rpx;
}

.promo-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.promo-desc {
  font-size: 24rpx;
