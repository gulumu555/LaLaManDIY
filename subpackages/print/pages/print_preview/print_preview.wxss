/* print_preview.wxss - 打印效果预览页面样式 (VOUN风格) */

/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background-color: #000000;
  color: #ffffff;
  overflow: hidden;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #000000;
  border-bottom: 1rpx solid #333333;
  padding-top: env(safe-area-inset-top);
  z-index: 10;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

.nav-right {
  padding: 10rpx 0;
}

.next-text {
  font-size: 28rpx;
  color: #4cd964;
}

/* 打印效果预览区域 */
.preview-area {
  width: 100%;
  height: 45vh;
  background-color: #111111;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.print-type-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  z-index: 5;
}

.print-type-badge text {
  font-size: 24rpx;
  color: #ffffff;
}

.preview-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 不干胶预览样式 */
.sticker-preview {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sticker-device-container {
  position: relative;
  width: 80%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 设备占位符样式 */
.device-placeholder {
  width: 100%;
  height: 100%;
  background-color: #333333;
  border-radius: 12rpx;
  position: relative;
}

/* 手机设备占位符 */
.phone-placeholder {
  width: 60%;
  height: 85%;
  margin: 0 auto;
  border-radius: 30rpx;
  background-color: #222222;
  position: relative;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.5);
}

.phone-placeholder:before {
  content: '';
  position: absolute;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 5%;
  background-color: #444444;
  border-radius: 10rpx;
}

/* 笔记本设备占位符 */
.laptop-placeholder {
  width: 90%;
  height: 70%;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #222222;
  position: relative;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.5);
}

.laptop-placeholder:after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: 0;
  width: 100%;
  height: 15%;
  background-color: #444444;
  border-radius: 0 0 10rpx 10rpx;
}

/* 平板设备占位符 */
.ipad-placeholder {
  width: 75%;
  height: 90%;
  margin: 0 auto;
  border-radius: 20rpx;
  background-color: #222222;
  position: relative;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.5);
}

.sticker-image {
  position: absolute;
  width: 50%;
  height: 60%;
  object-fit: cover;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

/* 画报预览样式 */
.poster-preview {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.poster-wall-container {
  position: relative;
  width: 90%;
  height: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 墙壁占位符样式 */
.wall-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #444444, #222222);
  border-radius: 8rpx;
  position: relative;
}

.wall-placeholder:before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20%;
  background-color: #333333;
  border-radius: 0 0 8rpx 8rpx;
}

.poster-frame {
  position: absolute;
  width: 60%;
  height: 60%;
  background-color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.5);
  border: 10rpx solid #444444;
  overflow: hidden;
}

.poster-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 打印参数设置区域 */
.settings-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #000000;
  overflow: hidden;
}

.settings-scroll {
  flex: 1;
  width: 100%;
}

.setting-group {
  width: 100%;
  padding: 30rpx;
  border-bottom: 1rpx solid #333333;
}

.setting-header {
  margin-bottom: 20rpx;
}

.setting-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
}

/* 打印类型选择器 */
.type-selector {
  display: flex;
  justify-content: space-between;
}

.type-option {
  width: 48%;
  height: 120rpx;
  background-color: #222222;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  /* 移除过渡效果，避免晃动 */
  border: 2rpx solid transparent;
}

.type-option.selected {
  background-color: #333333;
  border: 2rpx solid #4cd964;
  /* 添加内部阴影效果代替动画 */
  box-shadow: inset 0 0 6rpx rgba(76, 217, 100, 0.3);
}

.type-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  width: 100%;
  padding: 0 4rpx;
  box-sizing: border-box;
}

/* 设备选择器 */
.device-selector {
  display: flex;
  justify-content: space-between;
}

.device-option {
  width: 31%;
  height: 120rpx;
  background-color: #222222;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  /* 移除过渡效果，避免晃动 */
  border: 2rpx solid transparent;
}

.device-option.selected {
  background-color: #333333;
  border: 2rpx solid #4cd964;
  /* 添加内部阴影效果代替动画 */
  box-shadow: inset 0 0 6rpx rgba(76, 217, 100, 0.3);
}

.device-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.device-name {
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  width: 100%;
  padding: 0 4rpx;
  box-sizing: border-box;
}

/* 画报尺寸选择器 */
.size-selector {
  display: flex;
  flex-direction: column;
}

.size-option {
  height: 80rpx;
  background-color: #222222;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  /* 移除过渡效果，避免晃动 */
  border: 2rpx solid transparent;
}

.size-option.selected {
  background-color: #333333;
  border: 2rpx solid #4cd964;
  /* 添加内部阴影效果代替动画 */
  box-shadow: inset 0 0 6rpx rgba(76, 217, 100, 0.3);
}

.size-name {
  font-size: 26rpx;
  color: #ffffff;
  text-align: center;
  width: 100%;
  padding: 0 4rpx;
  box-sizing: border-box;
}

/* 自定义尺寸输入 */
.custom-size-input {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.input-group {
  width: 48%;
  display: flex;
  flex-direction: column;
}

.input-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.size-input {
  height: 70rpx;
  background-color: #222222;
  border-radius: 8rpx;
  padding: 0 20rpx;
  color: #ffffff;
  font-size: 28rpx;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
  height: 70rpx;
}

.quantity-control {
  width: 70rpx;
  height: 70rpx;
  background-color: #222222;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.control-icon {
  font-size: 36rpx;
  color: #ffffff;
}

.quantity-input {
  flex: 1;
  height: 70rpx;
  background-color: #222222;
  border-radius: 8rpx;
  margin: 0 20rpx;
  padding: 0 20rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
}

/* 价格展示 */
.price-display {
  width: 100%;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-label {
  font-size: 28rpx;
  color: #ffffff;
}

.price-value {
  font-size: 36rpx;
  font-weight: 500;
  color: #4cd964;
}

/* 加载中提示 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-box {
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #ffffff;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
