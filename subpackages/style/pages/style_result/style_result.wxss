/* style_result.wxss - 风格效果页面样式 (VOUN风格) */

/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background-color: #000000;
  color: #ffffff;
  overflow: hidden;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #000000;
  border-bottom: 1rpx solid #333333;
  padding-top: env(safe-area-inset-top);
  z-index: 10;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

.nav-right {
  padding: 10rpx 0;
}

.next-text {
  font-size: 28rpx;
  color: #4cd964;
}

/* 效果展示区 (占页面高度的2/3) */
.style-preview-area {
  width: 100%;
  height: calc(66.7vh - 88rpx - env(safe-area-inset-top));
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #111111;
  position: relative;
  overflow: hidden;
}

.preview-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  transition: opacity 0.3s ease;
}

.preview-image.hidden {
  opacity: 0;
}

.preview-image.faded {
  opacity: 0.3;
}

/* 原图/效果图切换控制 */
.preview-switch-container {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  z-index: 5;
}

.preview-switch-text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 预览加载中样式 */
.preview-loading-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preview-loading {
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.preview-loading-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* 风格选择区 (占页面高度的1/3) */
.style-selector-area {
  width: 100%;
  height: calc(33.3vh);
  background-color: #000000;
  border-top: 1rpx solid #333333;
  display: flex;
  flex-direction: column;
}

/* 分类选择区域 */
.category-scroll {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #222222;
}

.category-list {
  display: flex;
  padding: 0 20rpx;
  height: 100%;
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  height: 100%;
  position: relative;
}

.category-name {
  font-size: 28rpx;
  color: #999999;
  white-space: nowrap;
}

.category-item.active .category-name {
  color: #4cd964;
  font-weight: 500;
}

.category-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #4cd964;
  border-radius: 2rpx;
}

/* 风格列表区域 */
.style-scroll {
  width: 100%;
  height: calc(100% - 80rpx);
  white-space: nowrap;
}

.style-list {
  display: flex;
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
}

.style-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  width: 140rpx;
  transition: transform 0.3s ease;
}

.style-icon-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.style-icon {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.style-name {
  font-size: 24rpx;
  color: #999999;
  width: 140rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.style-item.selected .style-icon-container {
  border: 3rpx solid #4cd964;
}

.style-item.selected .style-name {
  color: #4cd964;
}

/* 使用提示样式 */
.tips-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 900;
  pointer-events: none;
}

.tips-content {
  background-color: rgba(0, 0, 0, 0.8);
  padding: 30rpx;
  border-radius: 16rpx;
  max-width: 80%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.tips-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #4cd964;
  margin-bottom: 20rpx;
  text-align: center;
}

.tips-text {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* 加载中提示 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-box {
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* 动画效果 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
