/* photo_select.wxss - 风格功能照片选择页面样式 (VOUN风格) */

/* 页面容器 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 0;
  margin: 0;
  overflow: hidden;
}

/* 顶部导航栏 */
.nav-header {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  position: relative;
  z-index: 10;
  border-bottom: 1rpx solid #f0f0f0;
  padding-top: env(safe-area-inset-top);
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.album-selector {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 400;
  color: #000000;
  padding: 10rpx 20rpx;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  transition: transform 0.3s ease;
}

.dropdown-icon.active {
  transform: rotate(180deg);
}

.next-button {
  font-size: 28rpx;
  color: #000000;
  padding: 10rpx 20rpx;
  border-radius: 0;
  background-color: transparent;
}

/* 选中的照片预览区 */
.selected-image-area {
  width: 100%;
  height: 750rpx;
  background-color: #f5f5f5;
  overflow: hidden;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.selected-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.no-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
  font-size: 28rpx;
}

/* 照片选择区域 */
.photo-grid-container {
  flex: 1;
  width: 100%;
  height: calc(100vh - 88rpx - 750rpx - env(safe-area-inset-top));
  background-color: #ffffff;
  position: relative;
  overflow: hidden;
}

.photo-grid {
  width: 100%;
  height: 100%;
  padding: 5rpx;
  box-sizing: border-box;
}

.photo-item {
  width: 33.33%;
  height: 240rpx;
  padding: 5rpx;
  box-sizing: border-box;
  position: relative;
  display: inline-block;
}

.photo-thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 4rpx;
}

.photo-item.selected {
  position: relative;
}

.select-indicator {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 24rpx;
  z-index: 2;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.select-indicator::after {
  content: '✓';
  color: #ffffff;
  font-size: 24rpx;
}

/* 相册选择浮层 */
.album-panel {
  position: fixed;
  top: calc(88rpx + env(safe-area-inset-top));
  left: 0;
  width: 100%;
  background-color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 50;
  max-height: 60vh;
  overflow-y: auto;
  transform: translateY(0);
  transition: transform 0.3s ease;
}

.album-panel.hidden {
  transform: translateY(-100%);
}

.album-list {
  width: 100%;
}

.album-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
}

.album-item.active {
  background-color: #f5f5f5;
}

.album-count {
  font-size: 24rpx;
  color: #999999;
}

/* 加载中提示 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-box {
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #ffffff;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
